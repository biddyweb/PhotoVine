<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <include 
	    android:id="@+id/navigation"
	    style="@style/navigation"
	    layout="@layout/activity_navigation"/>
    
	
    <com.brennan_hzl.photovine.view.SlideShowView
            android:id="@+id/slideshow_player"
            android:layout_below="@id/navigation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scaleType="center"
            />
	
	<LinearLayout 
	    android:id="@+id/slideToolBar" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/slideshow_player"
	    android:weightSum="2"
	    android:orientation="vertical">
	    
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center_vertical"
	        android:weightSum="2"
	        android:orientation="horizontal">
	        
	        <ImageButton
	            android:id="@+id/album_image1"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:background="@color/photo_placeholder_bg_color0"
	            android:layout_weight="1"/>
	        
	        <ImageButton  
	            android:id="@+id/album_image2"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:background="@color/photo_placeholder_bg_color1"
	            android:layout_weight="1"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:weightSum="2"
	        android:orientation="horizontal">
	        
	        <ImageButton
	            android:id="@+id/album_image3"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:background="@color/photo_placeholder_bg_color2"
	            android:layout_weight="1"/>
	        
	        <ImageButton 
	            android:id="@+id/album_image4"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:background="@color/photo_placeholder_bg_color3"
	            android:layout_weight="1"/>
	    </LinearLayout>
	    
	</LinearLayout>
	
</RelativeLayout>