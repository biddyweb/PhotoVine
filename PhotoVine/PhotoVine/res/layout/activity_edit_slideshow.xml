<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <include 
	    android:id="@+id/navigation"
	    style="@style/navigation"
	    layout="@layout/activity_navigation"/>
    
	
    <com.brennan_hzl.photovine.view.SlideShowView
            android:id="@+id/slideshow_player"
            android:layout_below="@id/navigation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
    
	<RelativeLayout 
	    android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/slideshow_player">
		
		<LinearLayout 
		    android:id="@+id/slideToolBar" 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:weightSum="2"
		    android:orientation="vertical">
		    
		     <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="2dp"
		        android:layout_marginBottom="2dp"
		        android:layout_weight="1"
		        android:gravity="center_vertical"
		        android:weightSum="2"
		        android:orientation="horizontal">
		        
		        <TextView
		            android:id="@+id/change_duration"
		            android:layout_width="2dp"
		            android:layout_marginRight="2dp"
		            android:padding="5dp"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:drawableLeft="@drawable/ic_caption"
		            android:background="@color/text_link"
		            android:textColor="@android:color/white"
		            android:textSize="20sp"
		            android:text="@string/change_duration"
		            android:layout_weight="1"/>
		        
		        <TextView  
		            android:id="@+id/add_text"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:padding="5dp"
		            android:gravity="center"
		            android:drawableLeft="@drawable/ic_caption"
		            android:background="@color/text_link"
		            android:textColor="@android:color/white"
		            android:textSize="20sp"
		            android:text="@string/add_text"
		            android:layout_weight="1"/>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:weightSum="2"
		        android:orientation="horizontal">
		        
		        <TextView
		            android:id="@+id/add_music"
		            android:layout_width="2dp"
		            android:layout_marginRight="2dp"
		            android:padding="5dp"
		            android:layout_height="match_parent"
		            android:gravity="center"
		            android:drawableLeft="@drawable/ic_caption"
		            android:background="@color/text_link"
		            android:textColor="@android:color/white"
		            android:textSize="20sp"
		            android:text="@string/add_music"
		            android:layout_weight="1"/>
		        
		        <TextView 
		            android:id="@+id/add_effect"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:padding="5dp"
		            android:gravity="center"
		            android:drawableLeft="@drawable/ic_caption"
		            android:background="@color/text_link"
		            android:textColor="@android:color/white"
		            android:textSize="20sp"
		            android:text="@string/add_effect"
		            android:layout_weight="1"/>
		    </LinearLayout>
		    
		</LinearLayout>
		
		<FrameLayout 
		    android:id="@+id/fragment_container"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"/>
	</RelativeLayout>
</RelativeLayout>