<?xml version="1.0" encoding="UTF-8"?>
<com.brennan_hzl.photovine.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/framelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <com.brennan_hzl.photovine.view.SquareImageView 
        android:id="@+id/child_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <CheckBox
        android:id="@+id/child_checkbox"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:button="@drawable/pictures_select_icon" />
    
    <ToggleButton android:id="@+id/toggle_button" 
        android:background="@drawable/pic_choose_selector" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:textOn="@null" 
        android:textOff="@null" />
</com.brennan_hzl.photovine.view.SquareLayout>