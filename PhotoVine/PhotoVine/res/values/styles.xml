<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="navigation">
        <item name="android:background">@color/text_link</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48.0dip</item>
    </style>
   
    <style name="navigation_txt">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    
    <style name="navigation_title" parent="@style/navigation_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="AlertDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_link</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingTop">15dip</item>
        <item name="android:paddingBottom">14dip</item>
    </style>
    
    <style name="AlertDialogDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/text_link</item>
    </style>
    
    
    <style name="FragmentBackButton">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
</resources>
